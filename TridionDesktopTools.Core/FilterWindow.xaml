<Window x:Class="TridionDesktopTools.Core.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:core="clr-namespace:TridionDesktopTools.Core"
        Title="Filtering Options" Height="280" Width="600" Loaded="Window_Loaded" ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <core:SearchCriteriasControl x:Name="SearchCriteriasControl1" VerticalAlignment="Top" />

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Content="Ok" Name="btnOk" Width="100" Height="23" HorizontalAlignment="Left" Margin="6" Click="btnOk_Click" IsDefault="True" />
            <Button Content="Cancel" Name="btnCancel" Width="100" Height="23" HorizontalAlignment="Left" Margin="6" Click="btnCancel_Click" IsCancel="True" />
        </StackPanel>
        
    </Grid>
</Window>
